<% @user ||= current_user %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="score_form">
      <%= render 'shared/score_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'shared/score_chart' %>
    <h3>Scores</h3>
    <%= render 'shared/feed' %>
  </div>
</div>